# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/vris_db
REDIS_URL=redis://localhost:6379

# Security
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# API Keys (para autenticar apps)
API_KEY_LIBRO=libro-secret-api-key
API_KEY_VERIXMUSIC=verixmusic-secret-api-key
API_KEY_DASHBOARD=dashboard-secret-api-key

# Hugging Face
HUGGINGFACE_API_KEY=your-huggingface-api-key-here

# Environment
ENVIRONMENT=development
DEBUG=True

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:5000,https://libro.github.io

# Redis Cache
CACHE_TTL=300
CACHE_ENABLED=True

# ML Models
ML_MODELS_PATH=./app/ml/models/
RETRAIN_INTERVAL_HOURS=24

# Logging
LOG_LEVEL=INFO
